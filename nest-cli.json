{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "builder": "swc",
        "typeCheck": true,
        "deleteOutDir": true,
        "watchAssets": true,
        "manualRestart": false,
        "assets": [
            {
                "include": "**/*.hbs",
                "outDir": "dist"
            },
            {
                "include": "**/*.json",
                "exclude": "**/node_modules/**",
                "outDir": "dist"
            },
            {
                "include": "**/*.{yml,yaml}",
                "outDir": "dist"
            },
            {
                "include": "**/*.{pem,key,crt}",
                "outDir": "dist"
            }
        ]
    },
    "generateOptions": {
        "spec": true,
        "flat": false
    },
    "monorepo": false,
    "root": "src"
}